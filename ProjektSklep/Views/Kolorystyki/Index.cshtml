@model IEnumerable<Kolorystyka>

@{
    ViewData["Title"] = "Lista Kolorystyk";
}

<div class="row">
    <div class="col-md-8 offset-md-2">

        <table class="table">
            <thead>
                <tr class="text-center">
                    <th>@Html.DisplayNameFor(model => model.Nazwa)</th>
                    <th>@Html.DisplayNameFor(model => model.Opis)</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td class="align-middle">
                            @Html.DisplayFor(modelItem => item.Nazwa)
                        </td>
                        <td class="align-middle">
                            @Html.DisplayFor(modelItem => item.Opis)
                        </td>
                        <td class="align-middle">
                            <a class="btn btn-outline-primary" asp-action="Edit" asp-route-id="@item.KolorystykaId"> <i class="bi bi-pencil-square"></i>>Edytuj </a>  |
                            <a class="btn btn-outline-info" asp-action="Details" asp-route-id="@item.KolorystykaId"> <i class="bi bi-eye"></i>>Szczegóły </a>  |
                            <a class="btn btn-danger text-white" asp-action="Delete" asp-route-id="@item.KolorystykaId"> <i class="bi bi-trash"></i>>Usuń </a>
                        </td>
                    </tr>
                }

            </tbody>
            
        </table>     
    </div>
</div>

<div style="position: fixed; right: 25px; bottom: 25px;"class="text-white">
    <a asp-controller="Kolorystyki" asp-action="Create" class="btn-primary btn-success"> 
        <i class="bi bi-plus-circle"></i> Dodaj nową</a>
</div>
