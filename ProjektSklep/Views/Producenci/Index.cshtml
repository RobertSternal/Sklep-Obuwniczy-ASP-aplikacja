@model IEnumerable<Producent>

@{
    ViewData["Title"] = "Lista Producentów";
}

<div class="row">
    <div class="col-md-8 offset-md-2">

        <table class="table">
            <thead>
                <tr class="text-center">
                    <th>@Html.DisplayNameFor(model => model.Logo)</th>
                    <th>@Html.DisplayNameFor(model => model.NazwaProducenta)</th>
                    <th>@Html.DisplayNameFor(model => model.Opis)</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td class="align-middle">
                            <img class="rounded-circle" src="@item.Logo" alt="@item.NazwaProducenta" style="max-width: 150px"/>
                        </td>
                        <td class="align-middle">
                            @Html.DisplayFor(modelItem => item.NazwaProducenta)
                        </td>
                        <td class="align-middle">
                            @Html.DisplayFor(modelItem => item.Opis)
                        </td>
                        <td class="align-middle">
                            <a class="btn btn-outline-primary"> <i class="bi bi-pencil-square"></i>>Edytuj </a>  |
                            <a class="btn btn-outline-info"> <i class="bi bi-eye"></i>>Szczegóły </a>  |
                            <a class="btn btn-danger text-white"> <i class="bi bi-trash"></i>>Usuń </a>
                        </td>
                    </tr>
                }

            </tbody>
            
        </table>     
    </div>
</div>
